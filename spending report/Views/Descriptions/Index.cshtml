@model SpendingReport.ViewModels.TransactionDescriptionsViewModel
@{
    ViewBag.Title = "TransactionDescriptionsViewModels";
    Layout = "~/Views/Shared/SpendingMaster.cshtml";
}
@section Scripts{
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
}

@Ajax.ActionLink("Update descriptions in transactions", "UpdateDescriptions", new AjaxOptions
{
    HttpMethod="GET"
})
        <table>
            @foreach (var item in Model.Descriptions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(_=>item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Description, "DescriptionsTemplate")
                    </td>
                    <td>
                        @Html.ActionLink("Add description", "AddPaymentDescription","Descriptions", new{@DescriptionId = item.Id},null)
                    </td>
                </tr>
            }
        </table>
        @Html.ActionLink("Add new transaction description", "AddPaymentDescription", "Descriptions")
        

